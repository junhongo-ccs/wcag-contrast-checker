{
  "extends": "@create-figma-plugin/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "react": [
        "./node_modules/preact/compat"
      ],
      "react-dom": [
        "./node_modules/preact/compat"
      ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@figma",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}